<UserControl x:Class="WpfApp3.Views.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3.Views"
             xmlns:viewModels="clr-namespace:WpfApp3.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewModels:ContactsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding ContactsCollection}" SelectedItem="{Binding SelectedContact}" CanUserDeleteRows="True" >
           
        </DataGrid>
        <Button Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Delete" Command="{Binding DeleteCommand}"/>
    </Grid>
</UserControl>

